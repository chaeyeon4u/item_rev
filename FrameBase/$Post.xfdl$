    <Script type="xscript5.1"><![CDATA[this.grd_post_onheadclick = function(obj:nexacro.Grid,e:nexacro.GridClickEventInfo)
{
	// 0번 컬럼(체크박스)만 적용
    if (e.col == 0)
    {
        var ds = this.dsSlitmRev;

        // 현재 헤더 체크박스 상태 읽기
        var headChecked = obj.getCellProperty("head", 0, "text") == "1" ? true : false;

        // 헤더 체크박스 상태 토글 (비어있음 → 1 → 0)
        var newValue = headChecked ? "0" : "1";

        // 헤더 체크박스 UI 갱신
        obj.setCellProperty("head", 0, "text", newValue);

        // 전체 row 체크/해제
        for (var i = 0; i < ds.getRowCount(); i++)
        {
            ds.setColumn(i, "chk", newValue);
        }
    }
};

this.btn_plus_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var row = this.dsSlitmRev.addRow();
    this.dsSlitmRev.setColumn(row, "chk", "0");
};


this.grd_post_oncellclick = function(obj:nexacro.Grid,e:nexacro.GridClickEventInfo)
{
	var row = e.row;
    if (row < 0) return;

    // 선택된 row의 title 가져오기
    var title = this.dsSlitmRev.getColumn(row, "title");
    var cntn = this.dsSlitmRev.getColumn(row, "cntn");
    var rgstId = this.dsSlitmRev.getColumn(row, "rgstId");
    var slitmNm = this.dsSlitmRev.getColumn(row, "slitmNm");

    // Edit에 반영
    this.edt_title.set_value(title);
	this.edt_cntn.set_value(cntn);
	this.edt_rgstId.set_value(rgstId);
	this.edt_slitmNm.set_value(slitmNm);
	
	

};

this.edt_title_onchanged = function(obj:nexacro.Edit,e:nexacro.ChangeEventInfo)
{
	var row = this.dsSlitmRev.rowposition;  // 현재 선택된 row
    if (row < 0) return;

    // Edit에 입력한 내용 → Dataset의 title 컬럼에 반영
    this.dsSlitmRev.setColumn(row, "title", obj.value);
};

this.edt_cntn_onchanged = function(obj:nexacro.Edit,e:nexacro.ChangeEventInfo)
{
	var row = this.dsSlitmRev.rowposition;  // 현재 선택된 row
    if (row < 0) return;

    // Edit에 입력한 내용 → Dataset의 title 컬럼에 반영
    this.dsSlitmRev.setColumn(row, "cntn", obj.value);
};

this.edt_rgstId_onchanged = function(obj:nexacro.Edit,e:nexacro.ChangeEventInfo)
{
	var row = this.dsSlitmRev.rowposition;  // 현재 선택된 row
    if (row < 0) return;

    // Edit에 입력한 내용 → Dataset의 title 컬럼에 반영
    this.dsSlitmRev.setColumn(row, "rgstId", obj.value);

};

this.edt_slitmNm_onchanged = function(obj:nexacro.Edit,e:nexacro.ChangeEventInfo)
{
	var row = this.dsSlitmRev.rowposition;  // 현재 선택된 row
    if (row < 0) return;

    // Edit에 입력한 내용 → Dataset의 title 컬럼에 반영
    this.dsSlitmRev.setColumn(row, "slitmNm", obj.value);

};

]]></Script>
