    <Script type="xscript5.1"><![CDATA[this.grd_post_onheadclick = function(obj:nexacro.Grid,e:nexacro.GridClickEventInfo)
{
	// 0번 컬럼(체크박스)만 적용
    if (e.col == 0)
    {
        var ds = this.dsSlitmRev;

        // 현재 헤더 체크박스 상태 읽기
        var headChecked = obj.getCellProperty("head", 0, "text") == "1" ? true : false;

        // 헤더 체크박스 상태 토글 (비어있음 → 1 → 0)
        var newValue = headChecked ? "0" : "1";

        // 헤더 체크박스 UI 갱신
        obj.setCellProperty("head", 0, "text", newValue);

        // 전체 row 체크/해제
        for (var i = 0; i < ds.getRowCount(); i++)
        {
            ds.setColumn(i, "chk", newValue);
        }
    }
};

/* plus button click event */
this.btn_plus_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	var row = this.dsSlitmRev.addRow();
    this.dsSlitmRev.setColumn(row, "check", "0");
};


this.grd_post_oncellclick = function(obj:nexacro.Grid,e:nexacro.GridClickEventInfo)
{
	var row = e.row;
    if (row < 0) return;

    // 선택된 row의 title 가져오기
    var title = this.dsSlitmRev.getColumn(row, "title");
    var content = this.dsSlitmRev.getColumn(row, "content");
    var registrantId = this.dsSlitmRev.getColumn(row, "registrantId");
    var itemName = this.dsSlitmRev.getColumn(row, "itemName");

    // Edit에 반영
    this.edt_title.set_value(title);
	this.edt_content.set_value(content);
	this.edt_registrantId.set_value(registrantId);
	this.edt_itemName.set_value(itemName);
	
	

};

