this.grd_post_oncelldblclick = function(obj:nexacro.Grid,e:nexacro.GridClickEventInfo)
{
	
};

this.edt_title_onchanged = function(obj:nexacro.Edit,e:nexacro.ChangeEventInfo)
{
	var row = this.dsSlitmRev.rowposition;  // 현재 선택된 row
    if (row < 0) return;

    // Edit에 입력한 내용 → Dataset의 title 컬럼에 반영
    this.dsSlitmRev.setColumn(row, "title", obj.value);
};

